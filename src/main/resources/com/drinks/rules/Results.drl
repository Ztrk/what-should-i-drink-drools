rule "Drinks in Mexico"
    when
        Fact(name == "in_mexico", answer == Answer.YES)
    then
        List<Object> drinks = new ArrayList<>();
        drinks.add(new Drink("Jarritos"));
        drinksApp.presentResults(drinks);
end

